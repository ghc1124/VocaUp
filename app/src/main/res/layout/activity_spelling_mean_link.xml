<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAF0"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_giveup"
            android:text="시험포기"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:gravity="bottom"
            android:paddingLeft="5dp"
            android:text="문제 정보:"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingRight="5dp"
            android:text="문제/문제"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:typeface="serif" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5.5"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:gravity="center">

                <android.widget.Button
                    android:id="@+id/show_0"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button_blue_big3"
                    android:text="spell1"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:gravity="center">

                <android.widget.Button
                    android:id="@+id/show_1"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button_blue_big3"
                    android:text="spell2"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:gravity="center">

                <android.widget.Button
                    android:id="@+id/show_2"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button_blue_big3"
                    android:text="spell3"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:gravity="center">

                <android.widget.Button
                    android:id="@+id/show_3"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button_blue_big3"
                    android:text="spell4"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </TableRow>
        </TableLayout>


        <com.test.vocaup.draw.Link_line
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#FFFAF0" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5.5"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:gravity="center">

                <android.widget.Button
                    android:id="@+id/select_0"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button_blue_big3"
                    android:text="mean1"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:gravity="center">

                <android.widget.Button
                    android:id="@+id/select_1"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button_blue_big3"
                    android:text="mean2"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:gravity="center">

                <android.widget.Button
                    android:id="@+id/select_2"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button_blue_big3"
                    android:text="mean3"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:gravity="center">

                <android.widget.Button
                    android:id="@+id/select_3"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button_blue_big3"
                    android:text="mean4"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:gravity="bottom|right"
        android:orientation="horizontal"/>



</LinearLayout>