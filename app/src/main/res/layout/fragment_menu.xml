<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAF0"
    tools:context=".fragment.MenuFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imgBtn_exam"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_bg"
        app:layout_constraintBottom_toTopOf="@+id/imgBtn_lab"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_rawRes="@raw/exam"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <ImageButton
        android:id="@+id/imgBtn_lab"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/button_bg"
        android:elevation="20dp"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="3dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="나만의 단어장"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtn_myWord" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imgBtn_myWord"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/button_bg"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_rawRes="@raw/myword"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imgBtn_study"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_bg"
        app:lottie_rawRes="@raw/study"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintBottom_toTopOf="@+id/imgBtn_myWord"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="시험"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtn_exam" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="3dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="학습"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtn_study" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="40dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_abc"
        app:layout_constraintBottom_toTopOf="@+id/imgBtn_study"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="실험실"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtn_lab" />

</androidx.constraintlayout.widget.ConstraintLayout>